<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - IguanaTracker.Web.MVC</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
</head>
<body>
	<header>
		@*class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3"*@
		<nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light mb-3">
			<div class="container">
				<a role="img" aria-label="Iguana Tracker Logo and link to main page" class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">
					<img src="~/images/Iguana-Tracker-Logo-2-338-x-81.png" alt="Iguana Tracker Logo" />
				</a>
				<button class="navbar-toggler" type="button" data-toggle="collapse" data-target=".navbar-collapse" aria-controls="navbarSupportedContent"
						aria-expanded="false" aria-label="Toggle navigation">
					<span class="navbar-toggler-icon"></span>
				</button>
				<div class="navbar-collapse collapse d-sm-inline-flex flex-sm-row-reverse">
					<ul class="navbar-nav flex-grow-1">
						<li aria-label="Link to home page" class="nav-item">
							<a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
						</li>
						<li aria-label="Link to sightings page" class="nav-item">
							<a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Sightings">Sightings</a>
						</li>
						<li aria-label="Link to sightings page" class="nav-item">
							<a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="About">About</a>
						</li>
						<li aria-label="Link to privacy page" class="nav-item">
							<a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
						</li>
					</ul>
				</div>
			</div>
		</nav>
	</header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2020 - IguanaTracker.Web.MVC - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>
